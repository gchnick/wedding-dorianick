---
import { Image } from "astro:assets";

import Anchor from "@/components/Anchor.astro";
import iconMap from "@/assets/icons/map-pin-duotone.svg";
import Title from "@/components/Title.astro";
---

<Anchor id="location" />
<section class="py-20 bg-neutral-50">
  <div class="container mx-auto px-4 max-w-4xl text-center">
    <Title> Ubicación </Title>

    <div class="bg-white p-2 rounded-xl shadow-lg mb-8">
      <!-- Google Maps Embed Placeholder -->
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d519.222766851269!2d-69.93220569239978!3d8.75210716549295!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e7c9bc765dea481%3A0x1c62757c4fb3d5fa!2sSal%C3%B3n%20del%20Reino%20de%20los%20Testigos%20de%20Jehov%C3%A1!5e0!3m2!1ses!2sve!4v1763948734694!5m2!1ses!2sve"
        width="100%"
        height="450"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        title="Ubicación del discurso de boda en Google Maps"
        class="rounded-lg"></iframe>
    </div>

    <div
      class="flex flex-col md:flex-row justify-center items-center gap-8 mt-12"
    >
      <div class="flex flex-col items-center">
        <div
          class="w-12 h-12 bg-secondary-accent/20 rounded-full flex items-center justify-center mb-4 text-primary-accent"
        >
          <Image src={iconMap} alt="Ubicación" class="w-6 h-6" />
        </div>
        <h3 class="font-display text-xl text-neutral-dark mb-2">
          Discurso de boda
        </h3>
        <p class="text-neutral-mid">
          Avenida Pedro Pérez Delgado frente a la INAVI,<br />
          Salón del Reino de los testigos de Jehová.<br />
          Sabaneta, Barinas.
        </p>
        <a
          href="https://maps.app.goo.gl/uBWmaxJhwtXDAhin7"
          target="_blank"
          rel="noopener noreferrer"
          class="mt-4 text-primary-accent font-bold hover:underline"
        >
          Ver en Mapa
        </a>
      </div>
    </div>
  </div>
</section>

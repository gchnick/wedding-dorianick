---
import { Image } from "astro:assets";

import Anchor from "@/components/Anchor.astro";
import iconBus from "@/assets/icons/bus-duotone.svg";
import Title from "@/components/Title.astro";
---

<Anchor id="accommodation" />
<section class="py-20 bg-white">
  <div class="container mx-auto px-4 max-w-4xl">
    <Title>Hospedaje y transporte</Title>

    <div class="grid md:grid-cols-2 gap-8 mb-16">
      <!-- Hotel 1 -->
      <div
        class="bg-neutral-50 p-8 rounded-xl shadow-sm border border-neutral-100 hover:shadow-md transition-shadow"
      >
        <h3 class="font-body font-semibold text-neutral-500 text-xl mb-2">
          Hotel Principal
        </h3>
        <p class="text-neutral-mid mb-4">Gran Hotel Ciudad de México</p>
        <p class="text-sm text-neutral-mid mb-6">
          Código de descuento: <span class="font-bold text-primary-accent"
            >BODA-DN</span
          >
        </p>
        <a href="#" class="text-primary-accent font-bold hover:underline"
          >Reservar Ahora &rarr;</a
        >
      </div>

      <!-- Hotel 2 -->
      <div
        class="bg-neutral-50 p-8 rounded-xl shadow-sm border border-neutral-100 hover:shadow-md transition-shadow"
      >
        <h3 class="font-body font-semibold text-neutral-500 text-xl mb-2">
          Hotel Alternativo
        </h3>
        <p class="text-neutral-mid mb-4">Hampton Inn & Suites</p>
        <p class="text-sm text-neutral-mid mb-6">
          A 5 minutos del lugar del evento.
        </p>
        <a href="#" class="text-primary-accent font-bold hover:underline"
          >Ver Disponibilidad &rarr;</a
        >
      </div>
    </div>

    <!-- Transport -->
    <div
      class="bg-secondary-accent/10 p-8 rounded-xl flex flex-col md:flex-row items-center gap-6"
    >
      <div
        class="w-16 h-16 bg-white rounded-full flex items-center justify-center shadow-sm shrink-0"
      >
        <Image src={iconBus} alt="Transporte" class="w-8 h-8" />
      </div>
      <div class="text-center md:text-left">
        <h3 class="font-display text-xl text-neutral-dark mb-2">Transporte</h3>
        <p class="text-neutral-mid">
          Contaremos con transporte gratuito desde el Hotel Principal hacia la
          ceremonia y recepción. Salida: 3:30 PM.
        </p>
      </div>
    </div>
  </div>
</section>

---
import { Boys, Girls } from "@/constans/const";
import Anchor from "@/components/Anchor.astro";
import Avatar from "@/components/Avatar.astro";
import Title from "@/components/Title.astro";
---

<Anchor id="bridal-procession" />
<section class="py-20 bg-neutral-50">
  <div class="container mx-auto px-4 max-w-6xl text-center">
    <Title>Cortejo nupcial</Title>

    <div class="grid md:grid-cols-2 gap-16">
      <!-- Girls -->
      <div>
        <h3 class="font-body font-semibold text-2xl text-primary-accent mb-8">
          Amigas
        </h3>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
          {Girls.map(({ ...props }) => <Avatar {...props} />)}
        </div>
      </div>

      <!-- Boys -->
      <div>
        <h3 class="font-body font-semibold text-2xl text-primary-accent mb-8">
          Amigos
        </h3>
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
          {Boys.map(({ ...props }) => <Avatar {...props} />)}
        </div>
      </div>
    </div>
  </div>
</section>

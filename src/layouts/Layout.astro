---
import { weddingDateString, weddingDate } from "@/constans/const";
import Fireflies from "@/components/Fireflies.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";

import "@/styles/global.css";

export type Props = {
  title?: string;
  description?: string;
};

const defaultTitle = "Save the Date: Dorianni & Nick";
const defaultDescription = `Acompáñanos a celebrar nuestro amor el ${weddingDateString} en Sabaneta, Barinas.`;

let { title, description } = Astro.props;

title ??= defaultTitle;
description ??= defaultDescription;

const previousPage = Astro.request.headers.get("referer");
const isInternalNavigation = previousPage?.includes(Astro.url.origin);
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />

    <link
      rel="preload"
      href="/fonts/greatvibes-regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/lora-variablefont.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />

    <meta name="viewport" content="width=device-width" />
    <meta name="referrer" content="no-referrer" />

    <meta name="robots" content="index, follow" />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="Dorianni & Nick, Boda, Wedding, Sabaneta, Barinas, Save the Date, Matrimonio"
    />
    <meta name="author" content="Nick Galán" />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/og-image.png" />
    <meta property="og:locale" content="es_VE" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@gchnick" />
    <meta name="twitter:creator" content="@gchnick" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/og-image.png" />
    <meta name="twitter:image:alt" content={title} />
    <meta name="theme-color" content="#40e0d0" />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "WeddingEvent",
            "name": "Boda de Dorianni & Nick",
            "url": "https://www.dorianick.com",
            "description": "Acompáñanos a celebrar nuestro amor en Sabaneta, Barinas.",
            "startDate": "2026-01-30T20:00:00Z",
            "eventStatus": "https://schema.org/EventScheduled",
            "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode",
            "location": {
              "@type": "Place",
              "name": "Salón del Reino de los testigos de Jehová",
              "address": {
                "@type": "PostalAddress",
                "streetAddress": "Avenida Pedro Pérez Delgado frente a la INAVI",
                "addressLocality": "Sabaneta",
                "addressRegion": "Barinas",
                "addressCountry": "VE"
              }
            },
            "organizer": {
              "@type": "Person",
              "name": "Nick Galán",
              "url": "https://twitter.com/gchnick"
            },
            "performer": [
              {
                "@type": "Person",
                "name": "Dorianni"
              },
              {
                "@type": "Person",
                "name": "Nick"
              }
            ]
          },
          {
            "@type": "WebSite",
            "name": "Boda de Dorianni & Nick",
            "url": "https://www.dorianick.com"
          }
        ]
      }
    </script>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- <link rel="icon" type="image/png" sizes="16x16" href="/cropped-favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/cropped-favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/cropped-favicon-192x192.png" />
    <link rel="apple-touch-icon" href="/cropped-favicon-180x180.png" />
    <meta name="msapplication-TileImage" content="/cropped-favicon-270x270.png" /> -->
  </head>
  <body>
    <div class="overflow-hidden">
      <div id="mask" class={isInternalNavigation ? "unlocked" : ""}>
        <div id="background">
          <div class="relative z-2">
            <Header />
            <main>
              <slot />
            </main>
            <Footer />
          </div>
          <Fireflies />
        </div>
      </div>
    </div>
  </body>
</html>

<script>
  import { initAuth } from "@/stores/auth";
  initAuth();
</script>

<style>
  @keyframes love-reveal {
    100% {
      mask-size: 2000vh;
    }
  }

  html,
  body {
    scroll-behavior: smooth;
    margin: 0;
    width: 100%;
    height: 100%;
  }

  #mask {
    mask-image: url("/love.svg");
    mask-position: center center;
    mask-repeat: no-repeat;
    mask-size: 50px;
    overflow-y: scroll;
    position: fixed;
    inset: 0;
    &.animated {
      animation: love-reveal 3s forwards ease-in-out;
    }
    &.unlocked {
      position: relative;
      mask-size: 2000vh;
    }
  }

  /* Hide scrollbar for Chrome, Safari, and Opera */
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }
  /* Hide scrollbar for IE, Edge, and Firefox */
  .no-scrollbar {
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }

  @prefers-reduced-motion {
    #mask {
      animation: none !important;
    }

    html,
    body {
      scroll-behavior: auto;
    }
  }
</style>

<script>
  const maskEl = document.querySelector("#mask");
  maskEl?.classList.add("animated", "no-scrollbar");
</script>

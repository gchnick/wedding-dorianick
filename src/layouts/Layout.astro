---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import Fireflies from "@/components/Fireflies.astro";

import "@/styles/global.css";

export type Props = {
  title?: string;
  description?: string;
};

const defaultTitle = "Save the Date: Dorianni & Nick";
const defaultDescription =
  "Acompáñanos a celebrar nuestro amor el 15 de junio de 2024 en Sabaneta, Barinas.";

let { title, description } = Astro.props;

title ??= defaultTitle;
description ??= defaultDescription;

const previousPage = Astro.request.headers.get("referer");
const isInternalNavigation = previousPage?.includes(Astro.url.origin);
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />

    <link
      rel="preload"
      href="/fonts/montserrat.woff"
      as="font"
      type="font/woff"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/playfairdisplay.woff"
      as="font"
      type="font/woff"
      crossorigin="anonymous"
    />

    <meta name="viewport" content="width=device-width" />
    <meta name="referrer" content="no-referrer" />

    <meta name="robots" content="index, follow" />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="Dorianni & Nick, Boda, Wedding, Sabaneta, Barinas, Save the Date, Matrimonio"
    />
    <meta name="author" content="Nick Galán" />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://www.dorianick.com/og.jpg" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@gchnick" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://www.dorianick.com/og.jpg" />
    <meta name="twitter:image:alt" content={title} />
    <meta name="theme-color" content="#40e0d0" />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WeddingEvent",
        "name": "Boda de Dorianni & Nick",
        "url": "https://www.dorianick.com",
        "description": "Acompáñanos a celebrar nuestro amor el 15 de junio de 2024 en Sabaneta, Barinas.",
        "startDate": "2024-06-15T19:00:00",
        "eventStatus": "https://schema.org/EventScheduled",
        "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode",
        "location": {
          "@type": "Place",
          "name": "Sabaneta, Barinas",
          "address": {
            "@type": "PostalAddress",
            "addressLocality": "Sabaneta",
            "addressRegion": "Barinas",
            "addressCountry": "VE"
          }
        },
        "organizer": {
          "@type": "Person",
          "name": "Nick Galán",
          "url": "https://twitter.com/gchnick"
        },
        "performer": [
          {
            "@type": "Person",
            "name": "Dorianni"
          },
          {
            "@type": "Person",
            "name": "Nick"
          }
        ]
      }
    </script>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- <link rel="icon" type="image/png" sizes="16x16" href="/cropped-favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/cropped-favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/cropped-favicon-192x192.png" />
    <link rel="apple-touch-icon" href="/cropped-favicon-180x180.png" />
    <meta name="msapplication-TileImage" content="/cropped-favicon-270x270.png" /> -->
  </head>
  <body>
    <div class="overflow-hidden">
      <div id="mask" class={isInternalNavigation ? "unlocked" : ""}>
        <div id="background">
          <div class="relative z-2">
            <Header />
            <main>
              <slot />
            </main>
            <Footer />
          </div>
          <Fireflies />
        </div>
      </div>
    </div>
  </body>
</html>

<script>
  import { initAuth } from "@/stores/auth";
  initAuth();
</script>

<style>
  @keyframes love-reveal {
    100% {
      mask-size: 2000vh;
    }
  }

  html,
  body {
    scroll-behavior: smooth;
    margin: 0;
    width: 100%;
    height: 100%;
  }

  #mask {
    mask-image: url("/love.svg");
    mask-position: center center;
    mask-repeat: no-repeat;
    mask-size: 50px;
    overflow-y: scroll;
    position: fixed;
    inset: 0;
    &.animated {
      animation: love-reveal 3s forwards ease-in-out;
    }
    &.unlocked {
      position: relative;
      mask-size: 2000vh;
    }
  }

  @prefers-reduced-motion {
    #mask {
      animation: none !important;
    }

    html,
    body {
      scroll-behavior: auto;
    }
  }
</style>

<script>
  const maskEl = document.querySelector("#mask");
  maskEl?.classList.add("animated");
</script>

---
import MenuIcon from "@/assets/icons/menu.svg";
import XIcon from "@/assets/icons/x.svg";
---

<header
  class="w-full py-2 px-6 flex justify-between items-center bg-neutral-900 backdrop-blur-sm sticky top-0 z-50 border-b border-primary-accent/20"
>
  <!-- Left: Initials -->
  <a href="/">
    <img
      src="/favicon-heart.svg"
      alt="Iniciales de Dorianni y Nick"
      class="size-16"
    />
  </a>

  <!-- Right: Navigation (Future) -->
  <!-- Desktop Navigation -->
  <nav
    class="hidden md:flex gap-6 text-body font-medium text-white/90 items-center"
  >
    <a
      href="#our-history"
      class="relative hover:text-primary-accent transition-colors after:absolute after:left-0 after:-bottom-1 after:h-0.5 after:w-0 after:bg-primary-accent after:transition-all after:duration-300 hover:after:w-full"
      >Historia</a
    >
    <a
      href="#itinerary"
      class="relative hover:text-primary-accent transition-colors after:absolute after:left-0 after:-bottom-1 after:h-0.5 after:w-0 after:bg-primary-accent after:transition-all after:duration-300 hover:after:w-full"
      >Agenda</a
    >
    <a
      href="#location"
      class="relative hover:text-primary-accent transition-colors after:absolute after:left-0 after:-bottom-1 after:h-0.5 after:w-0 after:bg-primary-accent after:transition-all after:duration-300 hover:after:w-full"
      >Ubicación</a
    >
    <a
      href="#accommodation"
      class="relative hover:text-primary-accent transition-colors after:absolute after:left-0 after:-bottom-1 after:h-0.5 after:w-0 after:bg-primary-accent after:transition-all after:duration-300 hover:after:w-full"
      >Hospedaje</a
    >
    <a
      href="#gallery"
      class="relative hover:text-primary-accent transition-colors after:absolute after:left-0 after:-bottom-1 after:h-0.5 after:w-0 after:bg-primary-accent after:transition-all after:duration-300 hover:after:w-full"
      >Galería</a
    >
    <a
      href="#live-stream"
      class="relative hover:text-primary-accent transition-colors after:absolute after:left-0 after:-bottom-1 after:h-0.5 after:w-0 after:bg-primary-accent after:transition-all after:duration-300 hover:after:w-full"
      >Discurso por Zoom</a
    >
    <a
      href="#rsvp"
      class="font-body font-semibold bg-primary-accent text-neutral-dark px-4 py-2 rounded-lg hover:bg-white/80 transition-colors shadow-lg"
      >RSVP</a
    >
  </nav>

  <!-- Mobile Menu Button -->
  <button id="mobile-menu-btn" class="md:hidden focus:outline-none">
    <MenuIcon fill="white" />
  </button>
</header>

<!-- Mobile Menu Overlay -->
<div
  id="mobile-menu"
  class="fixed inset-0 bg-neutral-900 z-50 transform translate-x-full transition-transform duration-300 flex flex-col items-center justify-center gap-8 md:hidden"
>
  <button id="close-menu-btn" class="absolute top-6 right-8">
    <XIcon fill="white" />
  </button>

  <a href="#our-history" class="text-xl font-body text-white mobile-link"
    >Historia</a
  >
  <a href="#itinerary" class="text-xl font-body text-white mobile-link"
    >Agenda</a
  >
  <a href="#location" class="text-xl font-body text-white mobile-link"
    >Ubicación</a
  >
  <a href="#accommodation" class="text-xl font-body text-white mobile-link"
    >Hospedaje</a
  >
  <a href="#gallery" class="text-xl font-body text-white mobile-link">Galería</a
  >
  <a href="#live-stream" class="text-xl font-body text-white mobile-link"
    >Discurso por Zoom</a
  >
  <a
    href="#rsvp"
    class="font-body font-semibold bg-primary-accent text-neutral-dark px-8 py-3 rounded-lg hover:bg-white/80 transition-colors shadow-lg"
    >RSVP</a
  >
</div>

<script>
  const menuBtn = document.getElementById("mobile-menu-btn");
  const closeBtn = document.getElementById("close-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");
  const mobileLinks = document.querySelectorAll(".mobile-link");

  function toggleMenu() {
    mobileMenu?.classList.toggle("translate-x-full");
    document.body.classList.toggle("overflow-hidden");
  }

  menuBtn?.addEventListener("click", toggleMenu);
  closeBtn?.addEventListener("click", toggleMenu);

  mobileLinks.forEach((link) => {
    link.addEventListener("click", toggleMenu);
  });
</script>

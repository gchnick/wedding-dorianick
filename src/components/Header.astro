<header
  class="w-full py-6 px-8 flex justify-between items-center bg-white/80 backdrop-blur-sm sticky top-0 z-50 border-b border-neutral-100"
>
  <!-- Left: Initials -->
  <div class="text-2xl font-display tracking-widest">
    <span class="text-primary-accent">D</span>
    <span class="text-neutral-dark mx-1">&</span>
    <span class="text-primary-accent">N</span>
  </div>

  <!-- Right: Navigation (Future) -->
  <!-- Desktop Navigation -->
  <nav
    class="hidden md:flex gap-6 text-base font-semibold text-neutral-dark items-center"
  >
    <a
      href="#nuestra-historia"
      class="relative hover:text-primary-accent transition-colors after:absolute after:left-0 after:-bottom-1 after:h-0.5 after:w-0 after:bg-primary-accent after:transition-all after:duration-300 hover:after:w-full"
      >Historia</a
    >
    <a
      href="#agenda"
      class="relative hover:text-primary-accent transition-colors after:absolute after:left-0 after:-bottom-1 after:h-0.5 after:w-0 after:bg-primary-accent after:transition-all after:duration-300 hover:after:w-full"
      >Agenda</a
    >
    <a
      href="#ubicacion"
      class="relative hover:text-primary-accent transition-colors after:absolute after:left-0 after:-bottom-1 after:h-0.5 after:w-0 after:bg-primary-accent after:transition-all after:duration-300 hover:after:w-full"
      >Ubicación</a
    >
    <a
      href="#hospedaje"
      class="relative hover:text-primary-accent transition-colors after:absolute after:left-0 after:-bottom-1 after:h-0.5 after:w-0 after:bg-primary-accent after:transition-all after:duration-300 hover:after:w-full"
      >Hospedaje</a
    >
    <a
      href="#galeria"
      class="relative hover:text-primary-accent transition-colors after:absolute after:left-0 after:-bottom-1 after:h-0.5 after:w-0 after:bg-primary-accent after:transition-all after:duration-300 hover:after:w-full"
      >Galería</a
    >
    <a
      href="#envivo"
      class="relative hover:text-primary-accent transition-colors after:absolute after:left-0 after:-bottom-1 after:h-0.5 after:w-0 after:bg-primary-accent after:transition-all after:duration-300 hover:after:w-full"
      >En Vivo</a
    >
    <a
      href="#rsvp"
      class="bg-primary-accent text-white px-4 py-2 rounded-lg hover:bg-primary-accent/90 transition-colors"
      >RSVP</a
    >
  </nav>

  <!-- Mobile Menu Button -->
  <button
    id="mobile-menu-btn"
    class="md:hidden text-neutral-dark focus:outline-none"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-6 w-6"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 6h16M4 12h16M4 18h16"></path>
    </svg>
  </button>
</header>

<!-- Mobile Menu Overlay -->
<div
  id="mobile-menu"
  class="fixed inset-0 bg-white z-50 transform translate-x-full transition-transform duration-300 flex flex-col items-center justify-center gap-8 md:hidden"
>
  <button id="close-menu-btn" class="absolute top-6 right-8 text-neutral-dark">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-8 w-8"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </button>

  <a
    href="#nuestra-historia"
    class="text-xl font-display text-neutral-dark mobile-link">Historia</a
  >
  <a href="#agenda" class="text-xl font-display text-neutral-dark mobile-link"
    >Agenda</a
  >
  <a
    href="#ubicacion"
    class="text-xl font-display text-neutral-dark mobile-link">Ubicación</a
  >
  <a
    href="#hospedaje"
    class="text-xl font-display text-neutral-dark mobile-link">Hospedaje</a
  >
  <a href="#galeria" class="text-xl font-display text-neutral-dark mobile-link"
    >Galería</a
  >
  <a href="#envivo" class="text-xl font-display text-neutral-dark mobile-link"
    >En Vivo</a
  >
  <a
    href="#rsvp"
    class="bg-primary-accent text-white px-8 py-3 rounded-lg text-lg font-bold mobile-link"
    >RSVP</a
  >
</div>

<script>
  const menuBtn = document.getElementById("mobile-menu-btn");
  const closeBtn = document.getElementById("close-menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");
  const mobileLinks = document.querySelectorAll(".mobile-link");

  function toggleMenu() {
    mobileMenu?.classList.toggle("translate-x-full");
    document.body.classList.toggle("overflow-hidden");
  }

  menuBtn?.addEventListener("click", toggleMenu);
  closeBtn?.addEventListener("click", toggleMenu);

  mobileLinks.forEach((link) => {
    link.addEventListener("click", toggleMenu);
  });
</script>

---
import type { HTMLTag, Polymorphic } from "astro/types";

import Typography from "@/components/Typography.astro";

type Props<Tag extends HTMLTag> = Polymorphic<{
  as: Tag;
  dark?: boolean;
  class?: string;
}>;

const { as = "h2", class: clazz, dark } = Astro.props;
---

<header class:list={["mb-6 text-center select-none", clazz]}>
  <Typography
    as={as}
    variant="display"
    fontWeight="semiBold"
    color={dark ? "white" : "dark"}
  >
    <slot />
  </Typography>
</header>

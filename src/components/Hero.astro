---
import { Image } from "astro:assets";

import coupleMainPhoto from "@/assets/couple-main-photographic-2.webp";
import coupleNames from "@/assets/couple-names.svg";
---

<section
  class="relative w-full h-screen flex items-center justify-center overflow-hidden"
>
  <!-- Background Placeholder (Video/Image) -->
  <div class="absolute inset-0 z-0 bg-neutral-200">
    <div class="absolute inset-0 bg-black/40 z-10"></div>
    <Image
      src={coupleMainPhoto}
      alt="Dorianni & Nick"
      class="w-full h-full object-cover"
      loading="eager"
    />
  </div>

  <!-- Content -->
  <div
    class="relative z-10 text-center text-white px-4 max-w-4xl mx-auto flex flex-col items-center"
  >
    <p class="font-display text-xl md:text-2xl mb-8 tracking-widest uppercase">
      Nos Casamos
    </p>

    <Image
      src={coupleNames}
      alt="Dorianni & Nick"
      class="w-full max-w-2xl h-auto mb-10 invert brightness-0 filter drop-shadow-lg"
    />

    <p class="font-body text-lg md:text-xl mb-12 font-light">
      Celebra con nosotros este momento tan especial.
    </p>

    <div id="hero-cta">
      <!-- CTA will be injected here or handled by RsvpForm below -->
      <a
        href="#rsvp"
        class="inline-block bg-primary-accent text-neutral-dark font-bold py-3 px-8 rounded-lg shadow-lg hover:bg-white transition-colors duration-300"
      >
        Confirmar Asistencia
      </a>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div
    class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce z-20"
  >
    <svg
      class="w-6 h-6 text-white"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

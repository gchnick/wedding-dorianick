---
import { Image } from "astro:assets";

import coupleMainPhoto from "@/assets/couple-main-photographic-2.webp";
---

<section
  class="relative w-full h-screen flex items-center justify-center overflow-hidden"
>
  <!-- Background Placeholder (Video/Image) -->
  <div class="absolute inset-0 z-0 bg-neutral-200">
    <div class="absolute inset-0 bg-black/40 z-10"></div>
    <Image
      src={coupleMainPhoto}
      alt="Dorianni & Nick"
      class="w-full h-full object-cover"
      loading="eager"
    />
  </div>

  <!-- Content -->
  <div
    class="relative z-10 text-center text-white px-4 max-w-4xl mx-auto flex flex-col items-center"
  >
    <p class="font-display text-xl md:text-2xl mb-8 tracking-widest uppercase">
      Nos Casamos
    </p>

    <div class="couple-names-wrapper relative inline-block z-10 w-full">
      <img
        src="/couple-names.svg"
        alt="Dorianni & Nick"
        class="invert brightness-0 select-none"
      />
      <img
        src="/couple-names.svg"
        alt="Dorianni & Nick"
        class="pulse absolute top-0 left-0 -z-10 inline-block invert brightness-0 filter opacity-50 blur-sm select-none"
      />
    </div>

    <p class="font-body text-lg md:text-xl mb-12 font-light">
      Celebra con nosotros este momento tan especial.
    </p>

    <div id="hero-cta">
      <!-- CTA will be injected here or handled by RsvpForm below -->
      <a
        href="#rsvp"
        class="inline-block bg-primary-accent text-neutral-dark font-bold py-3 px-8 rounded-lg shadow-lg hover:bg-white transition-colors duration-300"
      >
        Confirmar Asistencia
      </a>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div
    class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce z-20"
  >
    <svg
      class="w-6 h-6 text-white"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

<style>
  @keyframes pulse {
    0% {
      opacity: 0.5;
      transform: scale(1);
    }
    50% {
      opacity: 0.75;
      transform: scale(1.02);
    }
    100% {
      opacity: 0.5;
      transform: scale(1);
    }
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .pulse {
    animation: pulse 3s ease-in-out infinite;
  }

  .couple-names-wrapper {
    animation: float 5s ease-in-out infinite;
    filter: drop-shadow(0 0 20px rgba(64, 224, 208, 0.4));
  }
</style>

---
import { Image } from "astro:assets";

import Buttom from "@/components/Buttom.astro";
import coupleMainPhoto from "@/assets/couple-main-photographic-2.webp";
import Paragraph from "@/components/Paragraph.astro";
import Typography from "@/components/Typography.astro";
---

<section
  class="relative w-full h-screen flex items-center justify-center overflow-hidden"
>
  <!-- Background Placeholder (Image) -->
  <div class="absolute inset-0 z-0 bg-neutral-200">
    <div class="absolute inset-0 bg-black/40 z-10"></div>
    <Image
      src={coupleMainPhoto}
      alt="Dorianni & Nick"
      class="w-full h-full object-cover"
      loading="eager"
    />
  </div>

  <!-- Content -->
  <div
    class="relative z-10 text-center text-white px-4 max-w-4xl mx-auto flex flex-col items-center select-none"
  >
    <Typography as="h2" variant="subtitle1" class="select-none">
      Â¡Nos casamos!</Typography
    >

    <div
      class="couple-names-wrapper relative inline-block z-10 w-full select-none"
    >
      <img
        src="/couple-names.svg"
        alt="Dorianni & Nick"
        class="invert brightness-0 select-none"
      />
      <img
        src="/couple-names.svg"
        alt=""
        aria-hidden="true"
        class="pulse absolute top-0 left-0 -z-10 inline-block invert brightness-0 filter opacity-50 blur-sm select-none"
      />
    </div>

    <Paragraph class="mb-12 select-none">
      Celebra con nosotros este momento tan especial.
    </Paragraph>

    <div id="hero-cta">
      <!-- CTA will be injected here or handled by RsvpForm below -->
      <Buttom href="#rsvp" text="Confirmar Asistencia" />
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div
    class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce z-20"
  >
    <svg
      class="w-6 h-6 text-white"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

<style>
  @keyframes pulse {
    0% {
      opacity: 0.5;
      transform: scale(1);
    }
    50% {
      opacity: 0.75;
      transform: scale(1.02);
    }
    100% {
      opacity: 0.5;
      transform: scale(1);
    }
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .pulse {
    animation: pulse 3s ease-in-out infinite;
  }

  .couple-names-wrapper {
    animation: float 5s ease-in-out infinite;
    filter: drop-shadow(0 0 20px rgba(64, 224, 208, 0.4));
  }
</style>
